  ---
  layout: null
  sitemap: false
  ---
  <?xml version="1.0" encoding="UTF-8"?>
  <urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" 
  xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">

    <!-- Homepage -->
    <url>
      <loc>{{ site.url }}{{ site.baseurl }}/</loc>
      <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      <changefreq>weekly</changefreq>
      <priority>1.0</priority>
    </url>

    <!-- Static Pages -->
    {% for page in site.pages %}
      {% unless page.sitemap == false or page.url contains '/404' or
  page.url contains '/thank-you' %}
      <url>
        <loc>{{ site.url }}{{ site.baseurl }}{{ page.url }}</loc>
        {% if page.date %}
          <lastmod>{{ page.date | date_to_xmlschema }}</lastmod>
        {% else %}
          <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        {% endif %}
        <changefreq>{% if page.url == '/contact/' %}weekly{% elsif
  page.url == '/properties/' %}daily{% else %}monthly{% endif
  %}</changefreq>
        <priority>{% if page.url == '/contact/' or page.url ==
  '/properties/' %}0.9{% elsif page.url == '/about/' or page.url ==
  '/services/' %}0.8{% else %}0.7{% endif %}</priority>
        {% if page.image %}
        <image:image>
          <image:loc>{{ page.image | absolute_url }}</image:loc>
          <image:caption>{{ page.title | xml_escape }}</image:caption>
        </image:image>
        {% endif %}
      </url>
      {% endunless %}
    {% endfor %}

    <!-- Property Pages -->
    {% for property in site.properties %}
    <url>
      <loc>{{ site.url }}{{ site.baseurl }}{{ property.url }}</loc>
      {% if property.date %}
        <lastmod>{{ property.date | date_to_xmlschema }}</lastmod>
      {% else %}
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      {% endif %}
      <changefreq>weekly</changefreq>
      <priority>0.8</priority>
      {% if property.images %}
        {% for image in property.images %}
        <image:image>
          <image:loc>{{ image | absolute_url }}</image:loc>
          <image:caption>{{ property.title | xml_escape }} - Property
  Image</image:caption>
        </image:image>
        {% endfor %}
      {% elsif property.image %}
      <image:image>
        <image:loc>{{ property.image | absolute_url }}</image:loc>
        <image:caption>{{ property.title | xml_escape }}</image:caption>
      </image:image>
      {% endif %}
    </url>
    {% endfor %}

    <!-- Blog Posts (if any) -->
    {% for post in site.posts %}
    <url>
      <loc>{{ site.url }}{{ site.baseurl }}{{ post.url }}</loc>
      <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
      <changefreq>yearly</changefreq>
      <priority>0.6</priority>
      {% if post.image %}
      <image:image>
        <image:loc>{{ post.image | absolute_url }}</image:loc>
        <image:caption>{{ post.title | xml_escape }}</image:caption>
      </image:image>
      {% endif %}
    </url>
    {% endfor %}

  </urlset>
